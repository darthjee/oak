<%= form.input(:name, placeholder: "Item name") %>
<%=
  form.only(:form) do
    form.ng_select(
      :kind_slug,
      options: "gnc.kinds",
      reference_key: :slug,
      text_field: :name,
      ng_errors: "gnc.data.errors.kind",
    )
  end
%>
<%=
  form.only(:display) do
    form.input(
      "category.name",
      label: "Category"
    )
  end
%>
<%=
  form.only(:display) do
    form.input(
      "kind.name",
      label: "Kind"
    )
  end
%>
<%= form.textarea(:description, placeholder: "Description") %>