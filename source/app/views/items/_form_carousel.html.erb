<% form.only(:display) do %>
  <div class="card shadow-sm mt-4" ng-show="gnc.data.photos.length > 0">
    <div class="card-header bg-primary text-white">
      <h5 class="my-0 font-weight-normal">Photos</h5>
    </div>
    <div id="itemPhotosCarousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div
          class="carousel-item {{ $index === 0 ? 'active' : '' }}"
          ng-repeat="photo in gnc.data.photos track by $index">
          <img src="{{photo.photo_url}}" class="d-block mx-auto w-75 rounded">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-target="#itemPhotosCarousel" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-target="#itemPhotosCarousel" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </button>
    </div>
  </div>
<% end %>

<% form.only(:form) do %>
  <div class="photos-section mt-4">
    <h5 class="text-primary">Manage Photos</h5>
    <div class="form-group">
      <label for="photoUpload" class="btn btn-secondary btn-sm">
        Upload Photo
        <input
          type="file"
          id="photoUpload"
          class="d-none"
          ng-change="gnc.uploadPhoto()"
          ng-model="gnc.newPhoto">
      </label>
    </div>
    <ul class="list-group">
      <li class="list-group-item d-flex justify-content-between align-items-center" ng-repeat="photo in gnc.data.photos track by $index">
        <span>{{photo.file_name}}</span>
        <button
          type="button"
          class="btn btn-danger btn-sm"
          ng-click="gnc.removePhoto($index)">
          Delete
        </button>
      </li>
    </ul>
  </div>
<% end %>