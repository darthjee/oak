<% form.only(:display) do %>
  <div class="card shadow-sm mt-4" ng-show="gnc.data.photos.length > 0">
    <div class="card-header bg-primary text-white">
      <h5 class="my-0 font-weight-normal">Photos</h5>
    </div>
    <div id="itemPhotosCarousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div
          class="carousel-item {{ $index === 0 ? 'active' : '' }}"
          ng-repeat="photo in gnc.data.photos track by $index">
          <img src="{{photo.photo_url}}" class="d-block mx-auto img-fluid rounded mw-100 mh-100" style="max-height: 300px;">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-target="#itemPhotosCarousel" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-target="#itemPhotosCarousel" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </button>
    </div>
  </div>
<% end %>