<div class="container mt-4">
  <div class="mt-4">
    <% magicka_display('gnc.data') do |form| %>
      <%= render partial: 'form', locals: { form: form } %>
    <% end %>
  </div>
  
  <div id="itemPhotosCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div
        class="carousel-item {{ $index === 0 ? 'active' : '' }}"
        ng-repeat="photo in gnc.data.photos track by $index">
        <img src="{{photo.photo_url}}" class="d-block mx-auto w-50">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-target="#itemPhotosCarousel" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-target="#itemPhotosCarousel" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </button>
  </div>
</div>