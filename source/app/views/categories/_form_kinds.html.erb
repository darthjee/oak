<div class="border p-3 mb-3 bg-light rounded">
  <!-- Add Kind Section -->

  <% form.only(:form) do %>
    <div class="form-group mt-4">
      <div class="row">
        <div class="col-12">
          <h5>Add a Kind</h5>
        </div>
      </div>
      <div class="d-flex align-items-center">
        <%=
          form.ng_select(
            :kind_slug,
            options: "gnc.kinds",
            reference_key: :slug,
            text_field: :name,
            ng_model: "gnc.addKind()",
            class: "form-control mr-2"
          )
        %>
        <button
          class="btn btn-success"
          ng-click="gnc.addKind()">
          Add
        </button>
      </div>
    </div>
  <% end %>

  <!-- Kinds Section -->
  <div class="form-group mt-4">
    <label for="category-kinds">Kinds</label>
    <div id="category-kinds" class="d-flex flex-wrap">
      <span
        class="badge badge-primary mr-2 mb-2 d-flex align-items-center"
        ng-repeat="kind in gnc.data.kinds track by kind.slug">
        {{kind.name}}

        <% form.only(:form) do %>
          <button
            class="btn btn-sm btn-danger ml-2"
            ng-click="gnc.removeKind(kind)">
            x
          </button>
        <% end %>
      </span>
    </div>
  </div>
</div>