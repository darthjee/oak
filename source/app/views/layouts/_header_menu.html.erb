<ul class="navbar-nav dropdown" ng-controller="Menu.Controller as menuController">
  <li class="nav-item p-2">
    <a class="nav-link dropdown-toggle" data-toggle="dropdown"
      role="button" aria-expanded="false">
      Categories
    </a>
    <div class="dropdown-menu">
      <%= angular_safe_link_to(:categories, {}, class: 'dropdown-item') do %>
        All
      <% end %>
      <%= angular_safe_link_to(
        :category_items,
        { category_slug: '{{category.slug}}'},
        class: 'dropdown-item',
        "ng-repeat": "category in menuController.data") do %>
        {{category.name}}
      <% end %>
    </div>
  </li>
</ul>